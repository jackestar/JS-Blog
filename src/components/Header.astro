        </div>
        <select name="lang" id="lang-selector" class="lang-select">
            <option value="es" selected={currentLang === "es"}>Espa√±ol</option>
            <option value="en" selected={currentLang === "en"}>English</option>
        </select>
    </nav>
</header>
<script>
    document.querySelector("select")?.addEventListener("change", (e) => {
        const target = e.target as HTMLSelectElement;
        const newLang = target.value;
        const currentPath = window.location.pathname;
        const pathParts = currentPath.split("/").filter(Boolean);
        // const knownLangs = ["es", "en"];

        let newPath;

        // if (knownLangs.includes(pathParts[0])) {
            pathParts[0] = newLang;
            newPath = "/" + pathParts.join("/");
        // } else {
            // newPath = `/${newLang}${currentPath}`;
        // }
        window.location.href = newPath;
    });
</script>

<style>
    header {
        width: 100%;
        padding: 20px 40px;
        display: flex;
        justify-content: flex-end;
        position: absolute;
        z-index: 10;
    }

    nav {
        display: flex;
    }

    div.rrss {
        display: flex;
        min-width: 100px;
        justify-content: right;
        gap: 1em;
        margin-right: 1em;
    }

    div.rrss svg {
        width: 24px;
        height: 24px;
        overflow: visible;
    }

    div.rrss a {
        color: var(--accent);
        text-decoration: none;
    }

    select {
        text-align: center;
        background: var(--filter);
        padding: 5px;
        border: 1px solid var(--accent);
        backdrop-filter: blur(5px);
        color: var(--accent);
        cursor: pointer;
        transition: 0.2s linear;
    }

    select:hover {
        background: var(--accent);
        color: var(--filter);
        transition: 0.2s linear;
    }
</style>
