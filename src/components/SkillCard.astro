---
interface Tag {
  label: string;
  color: string;
}

interface Props {
  title: string;
  tags: Tag[];
}

const { title, tags } = Astro.props;

---
<figure>
  <div class="icon">
    <slot name="icon" />
  </div>
  <figcaption>
    <h3 class="category-title">{title}</h3>
    <div class="tags">
      {
        tags.map((tag) => (
          <span style={`--tag-bg:${tag.color};`}>{tag.label}</span>
        ))
      }
    </div>
  </figcaption>
</figure>

<style>
figure h3 {
  margin-bottom: 1em;
}

figure div.tags {
  display: flex;
  flex-wrap: wrap;
  gap: .5em;
  justify-content: center;
  align-items: center;
}

figure div.tags span {
  padding: .75em;
  border-radius: 30px;
  border: 1px #fff2 solid;
  cursor: pointer;
}

figure div.tags span:hover {
  background: var(--tag-bg);
}

figure {
  flex: 250px;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  border: 1px #fff3 solid;
  padding: 2em;
  background: var(--card-bg, rgba(255, 255, 255, 0.02));
  transition: border-color 0.3s ease;
}

figure:hover {
  border-color: var(--accent);
  opacity: 1 !important;
  visibility: 1 !important;
  filter: blur(0) !important;
  transition: .2s ease-in;

}

.skills-grid figure {
  transform: translateY(30px);
  will-change: transform, opacity, filter;
}

.tags span {
  transform: translateY(10px) scale(0.9);
}
</style>